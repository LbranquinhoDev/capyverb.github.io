{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
    },
    "deploy": {
        "startCommand": "python setup_postgres.py",
        "restartPolicyType": "ON_FAILURE",
        "numReplicas": 1
    }
}